@model WebCoreIsIstek.Models.TbUserPhoto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>TbUserPhoto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserPhoto)
        </dt>
        
        <dd class="col-sm-10">
            @if (Model.UserPhoto != null)
            {
                <img src="data:image/png;base64,
                    @Convert.ToBase64String(Model.UserPhoto,
                                    Base64FormattingOptions.None)"
                     class="img-circle" width="100" height="100"
                     alt="Image" />

            }
            else
            {
                <img src="~/images/no_user.png"
                     class="img-circle" width="100" height="100"
                     alt="Image" />
            }
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UserName">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
